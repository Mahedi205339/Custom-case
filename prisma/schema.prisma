generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iPhonex
  iPhone11
  iPhone12
  iPhone13
  iPhone14
  iPhone15
}

enum CaseMaterial {
  silicone
  polycarboate
}

enum CaseFinish {
  smooth
  texture
}

enum CaseColor {
  black
  blue
  rose
  cyan
  green
}

model Configuration {
  id              String        @id @default(cuid())
  width           Int
  height          Int
  model           PhoneModel?
  material        CaseMaterial?
  color           CaseColor?
  finish          CaseFinish?
  imageUrl        String
  croppedImageUrl String?
}
